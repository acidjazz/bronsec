.index
  min-height 2000px
  padding 74px 20px 20px 20px
  > .section
    border-top: 1px solid c.grey1
    font-size 20px
    line-height 30px
    > .logo
      background-image url(/img/bronsec.png)
      width 578px
      height 178px
      margin 60px auto 0 auto
      background-size cover
    > .inner
      max-width 960px
      margin auto
      padding 60px
    &.about > .inner > .copy
      float left
      width 50%
    &.about > .inner > .photo
      float left
      height 650px
      width 50%
      overflow hidden
      > .inner
        background-image url(/img/josha-suit.jpg)
        margin 20px
        height 100%
        background-size cover
        background-repeat no-repeat
        background-position 50% 18%

    &.services > .inner > .service
      > .inner
        margin 0 0 60px 0
        padding 20px
        background-color: c.grey1
        > .title
          font f_copyb
          font-weight bold
          color: c.purple4
        > .icon
          width 100px
          height 100px
          float right
          > svg
            width inherit
            height inherit
   
    &.services > .inner > .service:nth-child(1) > .inner > .icon > svg
      > g circle, > g path, > g 
        fill: c.purple3
    &.services > .inner > .service:nth-child(2) > .inner > .icon > svg
      > g circle, > g path, > g 
        fill: c.purple2
    &.services > .inner > .service:nth-child(3) > .inner > .icon > svg
      > g circle, > g path, > g 
        fill: c.purple3


@media all and (min-width: 1px) and (max-width: 1000px)
  .index
    padding 110px 10px 10px 10px
    > .section
      > .inner
        padding 0px 20px
        line-height 20px
      > .logo
        width 375px
        height 110px
        background-size 115%
        background-repeat no-repeat
        background-position 50% 50%
        margin 60px auto 60px auto
      &.about > .inner > .copy
        width 100%
      &.about > .inner > .photo
        width 100%
        height 350px

