.index
  padding 74px 20px 20px 20px
  > .section
    border-top: 1px solid c.grey1
    font-size 20px
    line-height 30px
    > .logo
      background-image url(/img/half.png)
      width 755px
      height 200px
      margin 60px auto 0 auto
      background-size cover
      animation cellInY 0.2s linear 0.1s both
    > .inner
      max-width 960px
      margin auto
      padding 60px
    &.home
      animation cellInY 0.2s linear 0.1s both
    &.about
      animation cellInY 0.2s linear 0.5s both
    &.about > .inner > .copy
      float left
      width 50%
    &.about > .inner > .photo
      float left
      height 650px
      width 50%
      overflow hidden
      > .inner
        background-image url(/img/josha-suit.jpg)
        margin 20px
        height 100%
        background-size cover
        background-repeat no-repeat
        background-position 50% 18%

    &.services > .inner > .service
      > .inner
        margin 0 0 60px 0
        padding 20px
        background-color: c.grey1
        > .title
          font f_copyb
          font-weight bold
          color: c.purple4
        > ul
          padding 10px 0 20px 20px
          margin 0
          > li
            padding 5px 0
        > .icon
          width 100px
          height 100px
          float right
          > svg
            width inherit
            height inherit
   
    &.services > .inner > .service:nth-child(1)
      animation cellInY 0.2s linear 0.2s both
    &.services > .inner > .service:nth-child(2)
      animation cellInY 0.2s linear 0.3s both
    &.services > .inner > .service:nth-child(3)
      animation cellInY 0.2s linear 0.4s both
    &.services > .inner > .service:nth-child(1) > .inner > .icon > svg
      > g circle, > g path, > g 
        fill: c.purple3
    &.services > .inner > .service:nth-child(2) > .inner > .icon > svg
      > g circle, > g path, > g 
        fill: c.purple2
    &.services > .inner > .service:nth-child(3) > .inner > .icon > svg
      > g circle, > g path, > g 
        fill: c.purple3


@media (-webkit-min-device-pixel-ratio: 2), (min-resolution: 192dpi) 
  .index > .section > .logo
    background-image url(/img/full.png)

@media all and (min-width: 1px) and (max-width: 1000px)
  .index
    > .section
      > .inner
        padding 60px 10px
        line-height 20px
      > .logo
        width 375px
        height 110px
        background-size 100%
        background-repeat no-repeat
        background-position 50% 50%
        margin 60px auto 30px auto
      &.services > .inner > .service > .inner > .icon
        width 50px
        height 50px
      &.about > .inner > .copy
        width 100%
      &.about > .inner > .photo
        width 100%
        height 350px

@media all and (min-width: 1px) and (max-width: 380px)
  .index
    > .section
      > .logo
        width 295px
        height 82px
        margin 30px auto 0 auto
   
