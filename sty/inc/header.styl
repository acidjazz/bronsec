.header
  border-bottom: 1px solid c.grey1
  padding 0px 20px
  margin 0 0 10px 0
  position fixed
  width 100%
  background-color: rgba(c.white1, 0.9)
  animation cellInX 0.2s linear 0s both
  z-index 10
  height 74px
  > .inner
    desktop()
    > .logo
      float left
      width 50px
      height 50px
      padding 10px 0 13px 0
      animation cellInX 0.2s linear 0.1s both
      > svg
        width inherit
        height inherit
      &.active
        border-bottom: 3px solid c.purple1
    > .contact
      display block
      float right
      background-color: c.purple4
      color: c.white1
      text-decoration none
      padding 10px 20px
      margin 17px 20px 0 0
      font f_copy
      text-transform uppercase
      transition background-color 0.2s linear
      &:hover
        background-color: c.purple3
    > .menu
      float left
      margin 0 0 -2px 20px
      > .item
        cursor pointer
        display inline-block
        padding 25px 10px 19px 10px
        margin 0 10px
        font f_copy2
        text-transform uppercase
        transition border 0.2s linear
        border-bottom: 1px solid transparent
        color: c.purple4
        text-decoration none
        &:hover
          border-bottom: 3px solid rgba(c.purple1, 0.25)
        &.active
          font-weight bold
          border-bottom: 3px solid c.purple1


@media all and (min-width: 1px) and (max-width: 1000px)
  .header
    padding 0 10px
    > .inner
      > .menu
        margin 0 0 -2px 5px
        > .item
          font-size 18px
          margin 0 2px
          padding 28px 5px 24px 5px
      > .contact
        margin 17px 30px 0 0
        padding 10px

@media all and (min-width: 1px) and (max-width: 380px)
  .header
    padding 0 
    > .inner
      > .menu
        margin 0 0 -2px 5px
        > .item
          font-size 14px
          padding 30px 5px 27px 5px
      > .contact
        font-size 14px
        margin 20px 10px 0 0
 
