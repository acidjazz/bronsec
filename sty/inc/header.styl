.header
  border-bottom: 1px solid c.grey1
  padding 0px 20px
  margin 0 0 10px 0
  > .logo
    float left
    width 50px
    height 50px
    padding 10px 0
    > svg
      width inherit
      height inherit
  > .menu
    float left
    margin 0 0 -2px 20px
    > .item
      cursor pointer
      display inline-block
      padding 25px 10px 21px 10px
      margin 0 -3px
      font f_copy2
      text-transform uppercase
      transition border 0.2s linear
      border-bottom: 1px solid transparent
      &:hover
        border-bottom: 3px solid rgba(c.purple1, 0.25)
      &.active
        font-weight bold
        border-bottom: 3px solid c.purple1
